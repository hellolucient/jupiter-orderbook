{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "strict": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "outDir": "./dist",
      "lib": ["es2020", "dom"]
    },
    "include": ["*.ts"],
    "exclude": ["node_modules"]
  }